<style>
  .cv-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .cv-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  h1 {
    font-size: 2.5rem;
    color: #00ff41;
    text-shadow: 0 0 20px rgba(0, 255, 65, 0.5);
  }

  h1::before {
    content: '# ';
  }

  .download-btn {
    background-color: transparent;
    color: #00ff41;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    border: 2px solid #00ff41;
    transition: all 0.2s;
  }

  .download-btn:hover {
    background-color: #00ff41;
    color: #0d0d0d;
    box-shadow: 0 0 15px rgba(0, 255, 65, 0.5);
  }

  .cv-section {
    margin-bottom: 3rem;
  }

  h2 {
    font-size: 1.75rem;
    color: #00ff41;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #00ff41;
  }

  h2::before {
    content: '## ';
  }

  .cv-item {
    display: flex;
    justify-content: space-between;
    gap: 2rem;
    margin-bottom: 1.5rem;
  }

  .cv-main {
    flex: 1;
  }

  .cv-date {
    color: #00ff41;
    font-weight: 600;
    white-space: nowrap;
    min-width: 150px;
    text-align: right;
  }

  .cv-date::before {
    content: '[';
    color: #00cc33;
  }

  .cv-date::after {
    content: ']';
    color: #00cc33;
  }

  .cv-item h3 {
    font-size: 1.15rem;
    color: #e0e0e0;
    margin-bottom: 0.25rem;
  }

  .institution {
    color: #a0a0a0;
    font-weight: 500;
    margin-bottom: 0.25rem;
  }

  .details {
    color: #a0a0a0;
    font-size: 0.95rem;
    margin-top: 0.25rem;
  }

  .cv-item ul {
    margin-top: 0.5rem;
    margin-left: 1.5rem;
  }

  .cv-item li {
    color: #c0c0c0;
    margin-bottom: 0.35rem;
    line-height: 1.6;
  }

  .cv-item li::marker {
    color: #00ff41;
  }

  .cv-pub {
    margin-bottom: 1rem;
    line-height: 1.7;
  }

  .cv-pub p {
    color: #c0c0c0;
  }

  .cv-pub strong {
    color: #00ff41;
  }

  .see-more {
    margin-top: 1rem;
    text-align: right;
  }

  .see-more a {
    color: #00ff41;
    text-decoration: none;
    font-weight: 500;
  }

  .see-more a:hover {
    text-decoration: underline;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
  }

  .skill-category h3 {
    font-size: 1.1rem;
    color: #e0e0e0;
    margin-bottom: 0.5rem;
  }

  .skill-category h3::before {
    content: '> ';
    color: #00ff41;
  }

  .skill-category p {
    color: #a0a0a0;
    line-height: 1.7;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .cv-item {
      flex-direction: column;
      gap: 0.5rem;
    }

    .cv-date {
      text-align: left;
    }

    .skills-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
