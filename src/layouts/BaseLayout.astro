---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Academic website and portfolio" } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <div class="nav-container">
          <a href="/" class="logo">Yonatan N. Degefu</a>
          <ul class="nav-links">
            <li><a href="/" class={currentPath === "/" ? "active" : ""}>Home</a></li>
            <li><a href="/about" class={currentPath === "/about" ? "active" : ""}>About</a></li>
            <li><a href="/research" class={currentPath === "/research" ? "active" : ""}>Research</a></li>
            <li><a href="/publications" class={currentPath === "/publications" ? "active" : ""}>Publications</a></li>
            <li><a href="/cv" class={currentPath === "/cv" ? "active" : ""}>CV</a></li>
          </ul>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <p>&copy; {new Date().getFullYear()} Yonatan N. Degefu. All rights reserved.</p>
    </footer>

    <style>
      :global(*) {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :global(body) {
        font-family: 'JetBrains Mono', 'Fira Code', 'Consolas', 'Monaco', 'Courier New', monospace;
        line-height: 1.6;
        color: #e0e0e0;
        background-color: #1a1a1a;
      }

      header {
        background-color: #0d0d0d;
        border-bottom: 1px solid #00ff41;
        position: sticky;
        top: 0;
        z-index: 100;
        box-shadow: 0 2px 8px rgba(0, 255, 65, 0.1);
      }

      nav {
        padding: 1rem 0;
      }

      .nav-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .logo {
        font-size: 1.5rem;
        font-weight: 700;
        color: #00ff41;
        text-decoration: none;
        transition: all 0.2s;
        text-shadow: 0 0 10px rgba(0, 255, 65, 0.5);
      }

      .logo:hover {
        color: #00cc33;
        text-shadow: 0 0 15px rgba(0, 255, 65, 0.8);
      }

      .logo::before {
        content: '> ';
        color: #00ff41;
      }

      .nav-links {
        display: flex;
        gap: 2rem;
        list-style: none;
      }

      .nav-links a {
        color: #a0a0a0;
        text-decoration: none;
        transition: all 0.2s;
        font-weight: 500;
        position: relative;
      }

      .nav-links a::before {
        content: '$ ';
        opacity: 0;
        transition: opacity 0.2s;
      }

      .nav-links a:hover,
      .nav-links a.active {
        color: #00ff41;
      }

      .nav-links a:hover::before,
      .nav-links a.active::before {
        opacity: 1;
      }

      main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 3rem 2rem;
        min-height: calc(100vh - 200px);
      }

      footer {
        background-color: #0d0d0d;
        padding: 2rem;
        text-align: center;
        color: #666;
        border-top: 1px solid #00ff41;
        font-size: 0.9rem;
      }

      @media (max-width: 768px) {
        .nav-container {
          flex-direction: column;
          gap: 1rem;
        }

        .nav-links {
          gap: 1rem;
          flex-wrap: wrap;
          justify-content: center;
        }

        main {
          padding: 2rem 1rem;
        }
      }
    </style>
  </body>
</html>
